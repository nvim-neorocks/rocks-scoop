{
    "version": "3.11.1",
    "description": "The package manager for Lua modules",
    "homepage": "https://luarocks.org",
    "license": "MIT",
    "depends": "lua51",
    "architecture": {
        "64bit": {
            "url": "https://luarocks.github.io/luarocks/releases/luarocks-3.11.1-win32.zip",
            "hash": "d5fb16455ad58c0f22621876d9c9f618216997e582f018a39008dd804daa0a85",
            "installer": {
                "script": [
                    "$lua = (versiondir 'lua51' 'current' $global) -replace \"\\\\\", '/'",
                    "powershell -ExecutionPolicy Bypass -Command \"& { Set-ExecutionPolicy -Scope Process Bypass; Set-Location $dir\\luarocks-3.11.1-win32; ./install.bat /LUA $lua /LIB $lua /BIN $lua /P $dir/luarocks /F /Q}\""
                ]
            }
        },
        "32bit": {
            "url": "https://luarocks.github.io/luarocks/releases/luarocks-3.11.1-win32.zip",
            "hash": "d5fb16455ad58c0f22621876d9c9f618216997e582f018a39008dd804daa0a85",
            "installer": {
                "script": [
                    "$lua = (versiondir 'lua51' 'current' $global) -replace \"\\\\\", '/'",
                    "powershell -ExecutionPolicy Bypass -Command \"& { Set-ExecutionPolicy -Scope Process Bypass; Set-Location $dir\\luarocks-3.11.1-win32; ./install.bat /LUA $lua /LIB $lua /BIN $lua /P $dir/luarocks /F /Q}\""
                ]
            }
        }
    },
    "post_install": [
        "$lua = (versiondir 'lua51' 'current' $global) -replace \"\\\\\", '/'",
        "dir $lua",
        "luarocks config variables.LUA_LIBDIR $lua",
        "luarocks config lua_version '5.1'"
    ],
    "bin": [
        "luarocks\\luarocks.bat",
        "luarocks\\luarocks-admin.bat"
    ],
    "env_add_path": "luarocks",
    "persist": [
        "luarocks"
    ],
    "checkver": {
        "url": "https://luarocks.github.io/luarocks/releases/",
        "regex": "luarocks-([\\d.]+)-win32"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://luarocks.github.io/luarocks/releases/luarocks-$version-windows-64.zip",
                "installer": {
                    "script": [
                        "$lua = (versiondir 'lua51' 'current' $global) -replace \"\\\\\", '/'",
                        "powershell -ExecutionPolicy Bypass -Command \"& { Set-ExecutionPolicy -Scope Process Bypass; Set-Location $dir\\luarocks-$version-win32; ./install.bat /LUA $lua /LIB $lua /BIN $lua /P $dir/luarocks /F /Q}\""
                    ]
                }
            },
            "32bit": {
                "url": "https://luarocks.github.io/luarocks/releases/luarocks-$version-windows-32.zip",
                "installer": {
                    "script": [
                        "$lua = (versiondir 'lua51' 'current' $global) -replace \"\\\\\", '/'",
                        "powershell -ExecutionPolicy Bypass -Command \"& { Set-ExecutionPolicy -Scope Process Bypass; Set-Location $dir\\luarocks-$version-win32; ./install.bat /LUA $lua /LIB $lua /BIN $lua /P $dir/luarocks /F /Q}\""
                    ]
                }
            }
        }
    }
}
